---
const { title, subText, btnText, btnLink } = Astro.props;
---

<section class="callto spad callto-bg" style="position: relative;">
    <div
        style="position: absolute;top: 0;left: 0;width: 100%;height: 100%;background-color: black;opacity: 0.6;"
    >
    </div>
    <div class="container">
        <div class="row text-center justify-content-center">
            <div class="col-lg-10">
                <div class="callto__text">
                    <h2>{title}</h2>
                    {subText && <p>{subText}</p>}
                </div>
                <a href={btnLink} class="primary-btn">{btnText}</a>
            </div>
        </div>
    </div>
</section>
